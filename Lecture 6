*) How many subArray's are there in the given array whose summation value == 0 ???

void IcpcDhakaRegionalist2025(){
    ll n ; cin >> n ; ll ans = 0 ; map<ll,ll> mp ;
    vll vec(n) , preSum(n+2,0) ; tamjid(n) cin >> vec[i] ;
    tamjid(n) preSum[i+1] = preSum[i] + vec[i] ;
    for(int i = 0 ; i <= n ; i++){
        ans += mp[preSum[i]] ; mp[preSum[i]]++ ;
    }
    cout << ans << sesh ;
}
